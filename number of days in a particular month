//program to tell number of days in a particular month
// developed by Ramendra 
#include <stdio.h>
void main()
{
    int a;
    printf("Enter a Number from 1-12\n");
    scanf("%d",&a);
    switch(a)
    {
        case 1: case 3: case 5: case 7: case 8: case 10: case 12:
        printf("31 days\n");
        break;
        case 2: printf("28 days");
        break;
        case 4: case 6: case 9: case 11: 
        printf("30 days\n");
        break;
        default :
        printf("Number out of range");
    }
}
