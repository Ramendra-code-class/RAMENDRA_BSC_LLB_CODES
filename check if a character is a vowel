//prg to check if a character is a vowel
//developed by Ramendra 
# include <stdio.h>
void main()
{
    char a;
    printf("Enter the character\n");
    scanf("%c",&a);
    switch(tolower(a))
    {
        case 'a': printf("Vowel");
        break;
        case 'e': printf("Vowel");
        break;
        case 'i': printf("Vowel");
        break;
        case 'o': printf("Vowel");
        break;
        case 'u': printf("Vowel");
        break;
        default: printf("NOT A VOWEL");
    }
}
